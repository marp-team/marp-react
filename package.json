{
  "name": "@marp-team/marp-react",
  "version": "0.0.3",
  "description": "Marp renderer component for React",
  "license": "MIT",
  "author": {
    "name": "Marp team",
    "url": "https://github.com/marp-team"
  },
  "contributors": [
    {
      "name": "Yuki Hattori",
      "url": "https://github.com/yhatt"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/marp-team/marp-react"
  },
  "main": "lib/index.js",
  "module": "module/index.js",
  "sideEffects": false,
  "types": "types/index.d.ts",
  "files": [
    "dist/",
    "lib/",
    "module/",
    "types/"
  ],
  "scripts": {
    "build:cjs": "rimraf lib && tsc --module commonjs --outDir lib",
    "build:module": "rimraf module && tsc --module esnext --outDir module",
    "build:worker": "rimraf dist && webpack --mode production",
    "check:audit": "yarn audit",
    "check:format": "yarn -s format -c",
    "check:ts": "tsc --noEmit",
    "format": "prettier \"**/*.{css,js,json,jsx,md,scss,ts,tsx,yaml,yml}\"",
    "format:write": "yarn -s format --write",
    "lint:js": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "prepack": "npm-run-all --parallel check:* lint:* test:coverage --parallel build:* types",
    "preversion": "run-p check:* lint:* test:coverage",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "types": "rimraf types && tsc --declaration --emitDeclarationOnly --outDir types",
    "version": "curl https://raw.githubusercontent.com/marp-team/marp/master/version.js | node && git add -A CHANGELOG.md"
  },
  "dependencies": {
    "camelcase": "^5.3.1",
    "he": "^1.2.0",
    "htm": "^2.2.1",
    "nanoid": "^2.0.4",
    "style-to-object": "^0.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@marp-team/marp-core": "^0.12.1",
    "@storybook/addon-knobs": "^5.1.11",
    "@storybook/addons": "^5.1.11",
    "@storybook/react": "^5.1.11",
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.2",
    "@types/storybook__react": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "babel-loader": "^8.0.6",
    "codecov": "^3.5.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "6.2.2",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "jest": "^24.9.0",
    "jest-junit": "^8.0.0",
    "markdown-it-container": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.7",
    "worker-loader": "^2.0.0"
  },
  "peerDependencies": {
    "@marp-team/marp-core": ">=0.6.0",
    "react": ">=16.8.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
